    <!-- Search view theme -->
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColorHint">@color/search_hint_color</item>
    </style>

    <!-- Progress Dialog theme -->
    <style name="AppTheme.ProgressBarDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
