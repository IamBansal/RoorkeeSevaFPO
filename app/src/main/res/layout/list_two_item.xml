<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/fpo"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/image"
        android:layout_marginHorizontal="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvItem"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Banana : 6 pcs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvPrice"
            android:textSize="16sp"
            android:text="Price: 700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvInventory"
            android:textSize="16sp"
            android:text="Inventory: 700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:id="@+id/line"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:dividerColor="@color/coolGrey"
        android:layout_below="@id/image"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/tvUnitsLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:text="Units left: 700"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentEnd="true"
        tools:ignore="HardcodedText" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpdate"
        android:text="Update"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        android:layout_below="@id/tvUnitsLeft"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="25dp"
        app:cornerRadius="10dp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        tools:ignore="HardcodedText" />

</RelativeLayout>